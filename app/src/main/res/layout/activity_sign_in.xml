<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linear_layout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teamworks"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_linear_layout"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/linear_layout_1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:layout_marginTop="15dp"
                    android:textSize="25dp"
                    android:textColor="@color/Black"
                    android:layout_gravity="center_horizontal"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_image"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/active_status_text_color"
                    android:foregroundTint="@color/active_status_text_color"
                    android:textColorHint="@color/active_status_text_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp">
                    <androidx.appcompat.widget.AppCompatMultiAutoCompleteTextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/active_status_text_color"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:maxLength="30"
                        android:textColorHint="@color/Black"
                        android:singleLine="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_image"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/active_status_text_color"
                    android:foregroundTint="@color/active_status_text_color"
                    android:textColorHint="@color/active_status_text_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="15dp">
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/active_status_text_color"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:maxLength="20"
                        android:inputType="textPassword"
                        android:textColorHint="@color/Black"
                        android:singleLine="false"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                app:cornerRadius="30dp"
                android:layout_marginTop="-25dp"
                android:background="@drawable/button_ripple"
                android:backgroundTint="@color/colorPrimary"
                android:text="Login"
                android:id="@+id/login"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have account ?"
            android:textAllCaps="false"
            android:background="@drawable/button_ripple"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/not_account"/>

    </RelativeLayout>
</ScrollView>

